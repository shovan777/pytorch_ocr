  {
    "action": "if",
    "src": ["$data_resized"],
    "dst": ["$train", "$val"],
    "settings": {
      "condition": {
        "project_datasets": ["cityscapes/aachen"]
      }
    }
  },

  {
    "action": "tag",
    "src": ["$train"],
    "dst": "$train_tagged",
    "settings": {
      "tag": "train"
    }
  },

  {
    "action": "tag",
    "src": ["$val"],
    "dst": "$val_tagged",
    "settings": {
      "tag": "val"
    }
  },

  {
    "action": "objects_filter",
    "src": ["$train_tagged", "$val_tagged"],
    "dst": "$small_filtered",
    "settings": {
      "filter_by": {
        "polygon_sizes": {
          "filtering_classes": ["vehicle", "road"],
          "area_percent": 0.15,
          "action": {"remap_class": "neutral"},
          "comparator": "less"
        }
      }
    }
  },

  {
    "action": "background",
    "src": ["$small_filtered"],
    "dst": "$bg",
    "settings": {
      "class": "neutral"
    }
  },

  {
    "action": "segmentation",
    "src": ["$bg"],
    "dst": "cityscales_3cl",
    "settings": {
      "gt_machine_color": {
        "bg": [0, 0, 0],
        "road": [1, 1, 1],
        "vehicle": [2, 2, 2],
        "neutral": [3, 3, 3]
      },
      "gt_human_color": {
        "bg": [0, 0, 0],
        "road": [0, 184, 217],
        "vehicle": [0, 255, 0],
        "neutral": [255, 255, 255]
      },
